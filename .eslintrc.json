{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    // Add any custom rules here
  },
  "settings": {
    "next": {
      "rootDir": "src"
    }
  },
  // This will prevent ESLint from blocking Vercel deployment on warnings
  "ignorePatterns": ["build/**/*", ".next/**/*"],
  // This ensures ESLint treats warnings as warnings, not errors
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  }
}